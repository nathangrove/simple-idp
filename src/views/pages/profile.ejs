<div class="container">
  <div class="card">
    <div class="card-content">
      <div class="card-title">
        <h3>User Profile</h3>
      </div>
      <table border="1">
        <tr>
          <th>ID</th>
          <td>
            <%= user.id %>
          </td>
        </tr>
        <tr>
          <th>Email</th>
          <td>
            <%= user.email %>
          </td>
        </tr>
        <tr>
          <th>Created At</th>
          <td>
            <%= user.createdAt %>
          </td>
        </tr>
        <tr>
          <th>Updated At</th>
          <td>
            <%= user.updatedAt %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>